<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/menu"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginVertical="15dp"
        app:srcCompat="@drawable/menu" />

    <TextView
        android:id="@+id/allUsedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/blackhansans"
        android:text="사용 기간"
        android:textColor="@color/gray"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/push_box"
            android:gravity="center"
            android:paddingVertical="7dp"
            android:text="1일"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/fill_box"
            android:gravity="center"
            android:paddingVertical="7dp"
            android:text="1주"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/fill_box"
            android:gravity="center"
            android:paddingVertical="7dp"
            android:text="1달"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:background="@drawable/fill_box"
            android:gravity="center"
            android:paddingVertical="7dp"
            android:text="1년"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/allUsedTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|fill"
        android:paddingHorizontal="8dp"
        android:paddingVertical="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/all_time" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:text="휴대폰 사용시간"
                android:textColor="@color/gray_F3"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/allTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용 시간"
                    android:textColor="@color/gray_F3"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/difference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="39분 감소"
                    android:textColor="@color/purple" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/fill_box2"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:text="계산하기"
            android:textColor="@color/purple" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="8dp" />
</LinearLayout>