<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/menu"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_marginVertical="15dp"
        android:contentDescription="menu"
        app:srcCompat="@drawable/menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/blackhansans"
            android:text="비유 대상"
            android:textColor="@color/gray"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/notosanskr"
            android:text="한 권당 6시간 기준"
            android:textColor="@color/gray" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/metaphorRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/col_list"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/push_box"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingVertical="7dp"
            android:text="오늘"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:background="@drawable/fill_box"
            android:gravity="center"
            android:paddingVertical="7dp"
            android:text="이번 주"
            android:textColor="@color/gray"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/allUsedTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="20dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="img"
            app:srcCompat="@drawable/all_time" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="휴대폰 사용"
            android:textColor="@color/gray_F3"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="1.3권"
                android:textColor="@color/purple2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comparison"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.8권 증가"
                android:textColor="@color/gray"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="18dp"
            android:layout_marginStart="19dp"
            android:contentDescription="arrow"
            app:srcCompat="@drawable/arrow" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/appRecyclerView"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/row_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="8dp" />
</LinearLayout>
